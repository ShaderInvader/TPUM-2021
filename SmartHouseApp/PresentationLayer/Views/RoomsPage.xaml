<Page x:Class="PresentationLayer.Views.RoomsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PresentationLayer.Views"
      xmlns:vm="clr-namespace:PresentationLayer.ViewModels"
      xmlns:l="clr-namespace:LogicLayer;assembly=LogicLayer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RoomsPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <TreeView ItemsSource="{Binding Rooms}">
            <TreeView.Resources>
                <HierarchicalDataTemplate ItemsSource="{Binding Devices}" DataType="{x:Type vm:RoomEntryViewModel}">
                    <Label Content="{Binding RoomName}"/>
                    <HierarchicalDataTemplate.ItemTemplate>
                        <HierarchicalDataTemplate DataType="{x:Type l:DeviceDTO}">
                            <Label Content="{Binding Name}"/>
                        </HierarchicalDataTemplate>
                    </HierarchicalDataTemplate.ItemTemplate>
                </HierarchicalDataTemplate>
            </TreeView.Resources>
        </TreeView>
    </Grid>
</Page>
